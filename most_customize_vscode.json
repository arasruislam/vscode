  "terminal.integrated.fontWeight": "normal",
  // ЁЯФа Terminal-ржПрж░ normal font weight

  "terminal.integrated.fontWeightBold": "bold",
  // ЁЯФа Terminal-ржП bold text-ржПрж░ weight

  "terminal.integrated.cursorStyle": "line",
  // ЁЯЦ▒ Terminal cursor style set ржХрж░рзЗ тЖТ vertical line

